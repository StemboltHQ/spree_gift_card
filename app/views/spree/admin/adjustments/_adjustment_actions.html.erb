<% if adjustment.open? %>
  <%= link_to_edit adjustment, no_text: true %>
  <%= link_to_delete adjustment, no_text: true %>

  <% if adjustment.source_type == "Spree::GiftCard" %>
    <%= link_to_with_icon 'icon-reply-all',
      Spree.t(:refund_gc),
      refund_gc_admin_adjustment_path(order_id: @order.to_param, id: adjustment.to_param),
      method: :post,
      no_text: true,
      data: { confirm: Spree.t(:gift_card_return_confirmation) }
    %>
  <% end %>
<% end %>

